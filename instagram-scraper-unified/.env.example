# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# RapidAPI Configuration
RAPIDAPI_KEY=your-rapidapi-key
RAPIDAPI_HOST=instagram-looter2.p.rapidapi.com

# Scraper Configuration
UPDATE_FREQUENCY=21600  # 6 hours in seconds
BATCH_SIZE=100  # Number of creators to process per batch
MAX_DAILY_API_CALLS=24000  # Daily API call limit
MAX_MONTHLY_API_CALLS=1000000  # Monthly limit (1M plan)

# Performance Settings
REQUEST_TIMEOUT=30  # Seconds
RETRY_MAX_ATTEMPTS=5
RETRY_WAIT_MIN=1  # Minimum wait between retries (seconds)
RETRY_WAIT_MAX=10  # Maximum wait between retries (seconds)
RATE_LIMIT_DELAY=0.05  # Delay between API calls (60 req/sec = 0.017s min)

# Features
ENABLE_VIRAL_DETECTION=true
VIRAL_MIN_VIEWS=50000
VIRAL_MULTIPLIER=5.0
ENABLE_ANALYTICS=true
ENABLE_COST_TRACKING=true

# Monitoring
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
ENABLE_SUPABASE_LOGGING=true
ENABLE_WEBHOOK_NOTIFICATIONS=false
WEBHOOK_URL=

# Redis Configuration (optional, for distributed processing)
REDIS_URL=redis://localhost:6379
USE_REDIS_QUEUE=false

# Development
DRY_RUN=false  # Set to true to test without making API calls
TEST_LIMIT=10  # Limit creators when testing