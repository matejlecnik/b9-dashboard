{
  "version": 2,
  "builds": [
    { "src": "dashboard/package.json", "use": "@vercel/next" }
  ],
  "framework": "nextjs",
  "github": { "enabled": true, "autoAlias": false, "autoJobCancelation": true },
  "env": {
    "NODE_ENV": "production",
    "RENDER_API_URL": "https://b9-dashboard.onrender.com",
    "NEXT_PUBLIC_RENDER_API_URL": "https://b9-dashboard.onrender.com"
  },
  "installCommand": "cd dashboard && npm ci --prefer-offline --no-audit --legacy-peer-deps",
  "buildCommand": "cd dashboard && npm run build",
  "outputDirectory": "dashboard/.next"
  ,
  "routes": [
    { "src": "/_next/(.*)", "dest": "dashboard/_next/$1" },
    { "src": "/(.*)", "dest": "dashboard/$1" }
  ]
}
