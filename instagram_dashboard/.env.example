# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_service_role_key

# Instagram API Configuration (RapidAPI)
RAPIDAPI_KEY=your_rapidapi_key
RAPIDAPI_HOST=instagram-looter2.p.rapidapi.com

# Telegram Bot Configuration (for add-new-creator bot)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Optional: Ensemble Data API (for profile-tracker)
ENSEMBLE_TOKEN=your_ensemble_token

# Optional: Airtable Configuration (if still using Airtable)
AIRTABLE_BASE_ID=your_airtable_base_id
AIRTABLE_API_KEY=your_airtable_api_key

# Scraper Configuration
DEFAULT_PAGE_COUNT=12
INITIAL_TARGET_REELS=90
UPDATE_COUNT=10
RETRY_MAX_ATTEMPTS=5

# Always-on Scraper Configuration
SCRAPER_INTERVAL_SECONDS=21600  # 6 hours
SCRAPER_JITTER_SECONDS=60  # up to 1 minute jitter

# Optional: Development Settings
INSECURE_TLS=false  # Set to true only for development/testing